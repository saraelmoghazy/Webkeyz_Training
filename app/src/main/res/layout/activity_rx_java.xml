<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rxJava.RxJavaActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/createOperator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create operator"
        app:layout_constraintBottom_toTopOf="@+id/justOperator_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/justOperator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="just operator"
        app:layout_constraintBottom_toTopOf="@id/rangeOperator_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createOperator_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rangeOperator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="range operator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/justOperator_button" />

</androidx.constraintlayout.widget.ConstraintLayout>