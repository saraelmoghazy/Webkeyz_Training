<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recyclerview_animation.RecyclerViewAnimationActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/linearRecyclerViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="linear recycler view"
        app:layout_constraintBottom_toTopOf="@+id/staggeredRecyclerViewButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/staggeredRecyclerViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="staggered recycler view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearRecyclerViewButton" />


</androidx.constraintlayout.widget.ConstraintLayout>